<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index', books: @books %>
      
      <%= form_tag(date_search_path, :method => 'get', remote:true) do %>
        <%= date_field_tag :date_search %>
        <%= submit_tag 'Search', class:"btn btn-outline-dark" %>
      <% end %>
      <div class="date-search-result"></div>
      
      <h3 class="mt-3">投稿数の前日比・前週比</h3>
      <%= render 'record' %>
      
      <h3 class="mt-3">7日間分の投稿数</h3>
      <%= render 'week-record' %>
    </div>
  </div>
</div>